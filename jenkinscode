pipeline {
   agent { docker }
      stages {
         stage('Hello') {
               steps {
               echo 'Hello World'
               sh 'git --version'
               sh 'v'
               }
            }
      stage('Build') {
            steps {
                sh 'docker images'
                git branch: 'master', url: 'https://github.com/Gitdevops34/Testingcode.git'
                sh 'docker build -t my-python . -f dockerfile1'
                sh 'docker run my-python'
                //bat 'python ops.py'
            }
        } 
		}
    }
